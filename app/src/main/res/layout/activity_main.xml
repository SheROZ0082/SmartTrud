<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/image"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Дешевые"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        android:backgroundTint="#808000"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Бюджет"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="200dp"
        android:backgroundTint="#B8860B"
        android:textColor="@color/black" app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"
        />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Элитка"
        android:textSize="24sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="300dp"
        android:backgroundTint="#FFFF00"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>


    <com.google.android.material.button.MaterialButton
        app:cornerRadius="88dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Квартиры"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/teal_700"
        android:backgroundTint="@color/teal_200"
       />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@+id/btn"
            android:backgroundTint="#9ACD32"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="480dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="СДАТЬ СВОЮ КВ "
            android:textColor="@color/black"/>

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="АРЕНДА"
                android:textSize="30dp"
                android:layout_marginLeft="250dp"
                android:layout_marginTop="300dp"
                android:textColor="#9ACD32"/>


































</androidx.constraintlayout.widget.ConstraintLayout>